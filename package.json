{
  "scripts": {
    "install": "lerna link",
    "prepare": "lerna run prepare",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/node": "^11.13.0",
    "jest": "^24.7.1",
    "lerna": "^3.13.1",
    "ts-jest": "^24.0.1",
    "typescript": "^3.4.1"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "**/src/main/**/*.{js,ts}"
    ],
    "moduleNameMapper": {
      "^@chaff/fui/([a-z]+)$": "<rootDir>/packages/fui/$1",
      "^@chaff/fui-([a-z]+)$": "<rootDir>/packages/fui-$1/"
    },
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "ignoreCodes": [
            "TS151001"
          ]
        }
      }
    }
  },
  "license": "MIT",
  "private": true
}
